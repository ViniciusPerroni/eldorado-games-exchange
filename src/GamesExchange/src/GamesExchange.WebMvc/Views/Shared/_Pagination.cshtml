@model PaginationViewModel;
@{
    var modPage = Model.Summary.TotalRows % Model.Summary.PageSize;
    var maxPage = Model.Summary.TotalRows / Model.Summary.PageSize;
    maxPage = modPage == 0 ? maxPage : maxPage + 1;
}
<div class="card-body">
    <div class="row">
        <div class="col align-self-center">
            <nav aria-label="Page navigation">
                <ul class="pagination mb-1">
                    @for (var currentpage = 1; currentpage <= maxPage; currentpage++)
                    {
                        <li class="page-item @(currentpage==Model.Summary.PageNumber ? "active" : "")">
                            <a class="page-link" href="@string.Format("{0}&summary.PageNumber={1}&summary.PageSize={2}",Model.Url, currentpage, Model.Summary.PageSize)">@currentpage</a>
                        </li>
                    }
                </ul>
            </nav>
        </div>
    </div>
</div>